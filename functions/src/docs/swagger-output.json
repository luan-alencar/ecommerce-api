            "type": "boolean",
            "example": false
          }
        },
        "required": [
          "descricao",
          "ativa"
        ]
      },
      "addOrder": {
        "type": "object",
        "properties": {
          "cliente": {
            "type": "object",
            "properties": {
              "nome": {
                "type": "string",
                "example": "João da Silva"
              },
              "telefone": {
                "type": "string",
                "example": "11999999999"
              }
            },
            "required": [
              "nome",
              "telefone"
            ]
          },
          "endereco": {
            "type": "object",
            "properties": {
              "logradouro": {
                "type": "string",
                "example": "Rua das Flores"
              },
              "numero": {
                "type": "string",
                "example": "100"
              },
              "bairro": {
                "type": "string",
                "example": "Centro"
              },
              "cidade": {
                "type": "string",
                "example": "Campina Grande"
              },
              "uf": {
                "type": "string",
                "example": "PB"
              }
            },
            "required": [
              "logradouro",
              "numero",
              "bairro",
              "cidade",
              "uf"
            ]
          },
          "isEntrega": {
            "type": "boolean",
            "example": true
          },
          "formaPagamento": {
            "type": "object",
            "properties": {
              "descricao": {
                "type": "string",
                "example": "Pix"
              }
            }
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "produto": {
                  "type": "object",
                  "properties": {
                    "nome": {
                      "type": "string",
                      "example": "Bolo de Chocolate"
                    }
                  }
                },
                "qtde": {
                  "type": "number",
                  "example": 1
                },
                "observacao": {
                  "type": "string",
                  "example": "Sem granulado"
                }
              },
              "required": [
                "produto",
                "qtde"
              ]
            }
          },
          "status": {
            "type": "string",
            "enum": [
              "pendente"
            ]
          },
          "observacoes": {
            "type": "string",
            "example": "Entregar após às 15h"
          }
        },
        "required": [
          "cliente",
          "isEntrega",
          "formaPagamento",
          "items"
        ]
      },
      "updateOrderStatus": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": [
              "pendente",
              "em_preparo",
              "pronto",
              "entregue",
              "cancelado"
